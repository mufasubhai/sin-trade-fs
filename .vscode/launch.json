{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "sin-trade-be",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src.app:app",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}/sin-trade-be",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port=5002"  
      ],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/sin-trade-be/be-venv/bin/python"
    },
    {
      "name": "sin-trade-ds",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src.app:app",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}/sin-trade-ds",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port=5004"  
      ],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/sin-trade-ds/ds-venv/bin/python"
    },
    {
      "name": "sin-trade-fe-server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/sin-trade-fe",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "start" // Replace "start" with your script name if different
      ],
      "env": {
        "BROWSER": "none"
      },
      "console": "integratedTerminal"
    },

    {
      "name": "sin-trade-fe",
      "type": "chrome",
      "request": "launch",
      "cwd": "${workspaceFolder}/sin-trade-fe",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/sin-trade-fe",
      "sourceMapPathOverrides": {
        "/@fs/*": "${workspaceFolder}/*",
        "/*": "${workspaceFolder}/*"
      },
      "sourceMaps": true,
      "runtimeExecutable": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome", // MacOS path
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--user-data-dir=${workspaceFolder}/.chrome-debug-profile"
      ],
      "port": 9222
    },
    
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Javascript Test",
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceRoot}/sin-trade-fe/node_modules/vitest/vitest.mjs",
      "args": ["run", "${relativeFile}"],
      "smartStep": true,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run Full App",
      "configurations": [
        "sin-trade-be",
        "sin-trade-ds",
        "sin-trade-fe-server",
        "sin-trade-fe"
      ]
    }
  ]
}