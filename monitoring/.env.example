# Monitoring Environment Variables
# Copy this to .env and fill in your values

# Backend service host (without protocol)
# For local development: backend:5002 (uses docker network)
# For Heroku: your-backend-app.herokuapp.com
SIN_TRADE_BE_HOST=backend:5002

# Data Science service host (without protocol)
# For local development: ds:5004 (uses docker network)
# For Heroku: your-ds-app.herokuapp.com
SIN_TRADE_DS_HOST=ds:5004

# Scrape scheme: http for local, https for production
SCRAPE_SCHEME=http

# Prometheus URL (used by Grafana to connect to Prometheus)
# For local development: http://prometheus:9090 (uses docker network)
# For Heroku: https://your-prometheus-app.herokuapp.com
PROMETHEUS_URL=http://prometheus:9090

# Grafana admin credentials
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=your-secure-password
