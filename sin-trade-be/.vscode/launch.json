{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "sin-trade-be",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src.app:app",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port=5002"
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/be-venv/bin/python"
        }
    ]
}